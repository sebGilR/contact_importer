

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birth date</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Cc</th>
      <th>Cc franchise</th>
      <th>Email</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.birth_date %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.address %></td>
        <td><%= contact.cc %></td>
        <td><%= contact.cc_franchise %></td>
        <td><%= contact.email %></td>
        <td><%= contact.user_id %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_nav(@pagy) %>
<br>
<style>
  .column_labels {
    text-transform: lowercase;
    margin-top: 10px;
    display: inline-block;
    width: 100px;
  }
</style>
<h3>Import Contacts</h3>
<%= form_tag import_contacts_path, multipart: true do %>
  <p>
    If your CSV file has different column headers to the ones below, please specify their name, otherwise leave the following fields empty.
  </p>
  <%= label :name, "name", class: "column_labels" %>
  <%= text_field :columns, :name %><br>
  <%= label :email, "email", class: "column_labels" %>
  <%= text_field :columns, :email %><br>
  <%= label :birth_date, "birth_date", class: "column_labels" %>
  <%= text_field :columns, :birth_date %><br>
  <%= label :phone, "phone", class: "column_labels" %>
  <%= text_field :columns, :phone %><br>
  <%= label :address, "address", class: "column_labels" %>
  <%= text_field :columns, :address %><br>
  <%= label :cc, "cc", class: "column_labels" %>
  <%= text_field :columns, :cc %><br><br>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload contacts CSV" %>
<% end %>
<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<br>
<%= link_to 'New Contact', new_contact_path %>
